#! /usr/bin/env stap
# Operação - Nome - Tempo
# string - string - time
# 150 - 300 - 500
# d4726b4e-9152-4afa-94dc-c354e5140eae


global fds

function sep:string () {
  return "\n#***d4726b4e-9152-4afa-94dc-c354e5140eae\n"
}

probe begin {
  printf("iniciando...\n")
}

probe syscall.open.return {
  if (pid() == target()) {
    if($return > 0) {
      fds[$return] = user_string($filename)
      printf("Aberto %s %s %s %d\n", sep(),
             user_string($filename), sep(),
             gettimeofday_s())

    }
    else
      printf("Falha ao abrir %s %s\n", sep(), user_string($filename))
  }
}

probe syscall.close {
  if(strlen(fds[$fd]) > 0) {
    if (pid() == target()) {
      printf("Fechado %s %s %s %d\n", sep(),
             fds[$fd], sep(),
             gettimeofday_s())
    }
    delete fds[$fd]
  }
}
